{
  "name": "visual-snow-overlay-filter",
  "version": "0.1.0",
  "author": "belvederef <francescobelvedere@hotmail.com>",
  "description": "A screen overlay filter that might help people affected by the visual snow effect",
  "private": true,
  "scripts": {
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "electron:build": "vue-cli-service electron:build",
    "electron:serve": "vue-cli-service electron:serve --enable-transparent-visuals --disable-gpu",
    "electron:generate-icons": "electron-icon-builder --input=./public/icon.png --output=build --flatten",
    "postinstall": "electron-builder install-app-deps",
    "postuninstall": "electron-builder install-app-deps",
    "serve": "vue-cli-service serve"
  },
  "main": "background.js",
  "dependencies": {
    "core-js": "^3.6.5",
    "lodash.debounce": "^4.0.8",
    "pug": "^2.0.3",
    "pug-plain-loader": "^1.0.0",
    "vue": "^2.6.12",
    "vue-click-outside": "^1.1.0",
    "vue-draggable-resizable": "^2.2.0",
    "vue-property-decorator": "^8.4.2",
    "vue-slider-component": "^3.2.11",
    "vue-toasted": "^1.1.28",
    "vuex": "^3.1.2"
  },
  "devDependencies": {
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/lodash": "^4.14.165",
    "@vue/cli-plugin-babel": "^4.5.9",
    "@vue/cli-plugin-eslint": "^4.5.9",
    "@vue/cli-plugin-router": "^4.5.9",
    "@vue/cli-plugin-typescript": "^4.5.9",
    "@vue/cli-plugin-vuex": "^4.5.9",
    "@vue/cli-service": "^4.5.9",
    "@vue/eslint-config-prettier": "^5.0.0",
    "@vue/eslint-config-typescript": "^4.0.0",
    "electron": "^11.1.0",
    "electron-devtools-installer": "^3.1.0",
    "electron-icon-builder": "^1.0.2",
    "eslint": "^5.16.0",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-vue": "^5.0.0",
    "husky": ">=4.2.5",
    "lint-staged": ">=10",
    "prettier": "^1.19.1",
    "sass": "^1.30.0",
    "sass-loader": "^8.0.0",
    "typescript": "~3.9.6",
    "vue-cli-plugin-electron-builder": "~2.0.0-rc.5",
    "vue-template-compiler": "^2.6.12",
    "vuex-module-decorators": "^0.17.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,vue}": "eslint --cache --fix",
    "*.{js,jsx,ts,tsx,vue,md,html,css,json}": "prettier --write"
  }
}
